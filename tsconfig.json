{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "src",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "src/index.js", "src/controllers/auth/index.ts", "src/utils/response/customSuccess.js", "src/routes/v1/auth.ts", "src/controllers/auth/changePassword.js"],
  // "include": ["./src/**/*.tsx", "./src/**/*.ts", "src/dfx/declarations/entry/index.js"],

  "exclude": ["node_modules", "test/**/*.ts"]
}
